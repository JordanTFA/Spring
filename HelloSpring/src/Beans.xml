<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   <!-- default-init-method = "init"
   		default-destroy-method = "destroy> -->

   <bean id = "helloWorld" class = "com.hellospring.HelloWorld">
		<property name = "message" value = "Hello World!"/>
   </bean>
   
   <bean id = "singleton" class = "scopes.singleton.HelloWorld" scope = "singleton">
   </bean>
   
   <bean id = "prototype" class = "scopes.prototype.HelloWorld" scope = "prototype">
   </bean>
   
   <bean id = "initDestroy" class = "lifecycle.initdestroy.HelloWorld" init-method = "init" destroy-method = "destroy">
   		<property name = "message" value = "Hello World!"/>
   </bean>
   
   <bean id = "postProc" class = "postprocessor.HelloWorld" init-method = "init" destroy-method = "destroy">
   		<property name = "message" value = "Hello World!"/>
   </bean>

	<bean class = "postprocessor.InitHelloWorld" />
</beans>